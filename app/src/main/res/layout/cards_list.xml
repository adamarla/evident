<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <include layout="@layout/card"
        android:id="@+id/question_card"
        android:visibility="gone"/>

    <include layout="@layout/answer_button_bar"
        android:id="@+id/answer_button_bar"/>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/answer_button_bar"
        android:divider="@null"
        android:dividerHeight="3dp" />

    <ImageView
        android:id="@+id/feedback_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_thumbs_up"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>